{
    "manifest_version": 3,  
    "name": "Showdown Extension",
    "version": "1.0",
    "description": "Add extra functionality to Pokemon Showdown",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "content_scripts": [
      {
        "js": ["scripts/util.js", "scripts/consts.js", "scripts/calculator.js", "scripts/gen1calculator.js", "scripts/content.js"],
        "css": ["styles/style.css"],
        "matches": [
          "https://play.pokemonshowdown.com/*"
        ]
      }
    ]
  }